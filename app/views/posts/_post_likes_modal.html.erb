<!-- Post Likes Modal -->
<div
  class="modal
  fade"
  id="post-<%= post.id %>-likes-modal"
  tabindex="-1"
  aria-labelledby="post-<%= post.id %>-likes-modal-label"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-center w-100" id="post-<%= post.id %>-likes-modal-label">Likes</h1>
        <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-flex flex-column">
        <% post.likers.map do |liker| %>
          <div class="d-flex flex-row justify-content-between align-items-center w-100 mb-3">
            <div>
              <% if post&.user&.profile_picture&.attached? %>
                <%= image_tag post.user.profile_picture, class: 'img-thumbnail rounded-circle' %>
              <% else %>
                <i class="fa-regular fa-circle-user fa-2xl me-2"></i>
              <% end %>
               <span class="fw-bold fs-6 text"><%= liker&.username %></span>
            </div>
             <%= link_to "Follow", root_path, class: "btn btn-primary text-light" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>