<div class="d-flex flex-lg-row flex-sm-column align-items-center home">
  <div class="d-flex flex-column justify-content-center main-wrapper">
    <%= image_tag 'home.jpg' %>
  </div>
  <div class="d-flex flex-column justify-content-center main-wrapper">
    <div class="card pt-5 mx-auto text-center" style="width: 23rem;">
      <%= image_tag 'logo.png', class: "card-img-top" %>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs text-left">
          <div class="mb-3 mt-4">
            <%= f.email_field :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        placeholder: "email",
                        class: "form-control" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.password_field :password,
                        required: false,
                        input_html: { autocomplete: "current-password" },
                        placeholder: "Password",
                        class: "form-control"  %>
          </div>
          <%# <div class="mb-3 mt-4">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? >
          </div>   %>
        </div>

        <div class="form-actions text-center">
           <%= f.button :submit, "Sign in", class: 'btn btn-primary mt-3 w-100' %>
          </div>
      <% end %>

      <div class="d-flex align-items-center mt-4">
        <div class="line"></div>
        <h2 class="line-text">OR</h2>
          <div class="line"></div>
        </div>

        <a href="#" class="d-block mt-4 text-decoration-none fw-bold text-blue rounded align-self-center p-1">
          <%= image_tag 'facebook.png', class: "facebook" %>
          Login with Facebook
        </a>

        <%# <p class="fs-6 fw-bold text-secondary align-self-center mt-2">
          You need to sign in or sign up before continuing
        </p> %>
      </div>
      <%= render "devise/shared/links" %>
      </div> 
    </div>  
  </div>
