<div class="d-flex fle-row justify-content-center home">
  <div class="card text-center pt-5 mx-auto" style="width: 23rem;">
  <%= image_tag 'logo.png', class: "card-img-top" %>
  <p class="w-75 fs-6 fw-bold text-secondary align-self-center mt-2">sign up to see photos and videos from your friends</p>
  <a href="#" class="d-block mt-4 text-decoration-none fw-bold bg-primary text-white rounded w-75 align-self-center p-1">
    <%= image_tag 'facebook.png', class: "facebook" %>
    Login with Facebook
  </a>
     <div class="d-flex align-items-center mt-4">
      <div class="line"></div>
      <h2 class="line-text">OR</h2>
      <div class="line"></div>
    </div>
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="mb-3 mt-4">
              <%= f.email_field :email, class: "form-control", placeholder: "Phone number or email" %>
            </div>
            <div class="mb-3 mt-4">
              <%= f.text_field :full_name, class: "form-control", placeholder: "Full Name" %>
            </div>
            <div class="mb-3 mt-4">
              <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
            </div>
            <%# <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <div class="mb-3 mt-4">
              <%= f.password_field :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" },
                          class: "form-control",
                          placeholder: "Password" %>
            </div>
            <div class="mb-3 mt-4">
              <%= f.password_field :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" },
                          class: "form-control",
                          placeholder: "Password" %>
            </div>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, "Sign up", class: 'btn btn-primary mt-3 w-100' %>
          </div>
        <% end %>
        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% elsif alert %>
          <p class="alert"><%= alert %></p>
        <% end %>
    </div>
  </div>
</div>
<div class="card text-center py-2 mt-3 mx-auto" style="width: 23rem;">
  <div class="card-text">
    have an account?
    <%= link_to  "Sign in", new_user_session_path, class: "fs-6 my-4 text-decoration-none text-info" %>
  </div>
</div>
